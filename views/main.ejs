<script>
    var ctx = document.getElementsByClassName("line-chart");
    var chartGraph = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado', 'Domingo'],
            datasets: [{
                label: 'Atividades',
                data: [12, 19, 3, 5, 2, 3, 1],
                borderWhidth: 6,
                borderColor: '#FF0000',
                backgroundColor: '#f458',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    function openModal() {
        document.getElementById('bgModal').style.visibility = 'visible';
        document.getElementById('modalCriarAtividade').style.visibility = 'visible';
    }

    function openModalActivity() {
        document.getElementById('bgModal').style.visibility = 'visible';
        document.getElementById('modalVisualizarAtividade').style.visibility = 'visible';
    }
    
    function openModalEdit() {
        document.getElementById('bgModal').style.visibility = 'visible';
        document.getElementById('modalEditarAtividade').style.visibility = 'visible';
    }

    function closeModal() {
        document.getElementById('bgModal').style.visibility = 'hidden';
        document.getElementById('modalCriarAtividade').style.visibility = 'hidden';
        document.getElementById('modalVisualizarAtividade').style.visibility = 'hidden';
    }

    function openDropdown() {
        let teste = document.getElementById('menuDropdown').style.display;
        if( teste == 'none') {
            document.getElementById('menuDropdown').style.display = 'block';
        } else {
            document.getElementById('menuDropdown').style.display = 'none';
        }
    }
</script>

</html>